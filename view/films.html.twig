<main role="main" class="container col-12 bg-secondary">



<div class="carousel-main col-12">
   <div id="carouselExampleInterval" class="carousel slide col-12" data-ride="carousel">
  <div class="carousel-inner col-12">
  
  
{% for films in allfilms %}
    <div {% if loop.index == 1 %} class="carousel-item active" {% else %} class="carousel-item" {% endif %} data-interval="5000">
        
        <img src="{{films.get_affiche}}"  class="d-block col-5" alt="{{films.get_titre}}">
                <div class="d-block text-dark col-5">
                    <h3>{{films.get_titre}}({{films.get_annee}})</h3>
                    {% for role in films.get_roles %}
                    <p class="text-dark"> Dans le r√¥le de {{role.get_personnage}} : {{role.get_acteur.get_prenom}} {{role.get_acteur.get_nom}} </p>
              {% endfor %}
                </div>
    </div>
    
{% endfor %}
  
  
  
  <a class="carousel-control-prev" href="#carouselExampleInterval" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleInterval" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
</div>